---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <div class="flex items-start justify-between gap-3">
        <h1 class="my-4 inline-block text-3xl leading-snug font-semibold sm:my-6 sm:text-5xl sm:leading-tight">
          在纷扰世界里，安住一念心。
        </h1>
        <a
          target="_blank"
          href="/rss.xml"
          class="mt-5 inline-block shrink-0 sm:mt-8"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss
            width={20}
            height={20}
            class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
          />
          <span class="sr-only">RSS Feed</span>
        </a>
      </div>

      <p class="mt-2 text-lg leading-relaxed text-foreground/90 sm:text-xl">
        记录佛法、生活与内在觉察。
      </p>
      <p class="mt-2 text-sm italic text-foreground/70">
        Awaken gently in the ordinary days.
      </p>

      <div class="mt-5 grid grid-cols-1 gap-3 sm:mt-6 sm:grid-cols-3">
        <a
          href="/tags/心经解读"
          class="rounded-lg border border-border bg-(--bg-card) px-4 py-3 transition-colors hover:border-accent hover:bg-muted/30"
        >
          <div class="text-base font-semibold">心经解读</div>
          <div class="mt-1 text-sm text-foreground/70">从一句经文开始，回到当下。</div>
        </a>
        <a
          href="/tags/禅修笔记"
          class="rounded-lg border border-border bg-(--bg-card) px-4 py-3 transition-colors hover:border-accent hover:bg-muted/30"
        >
          <div class="text-base font-semibold">禅修笔记</div>
          <div class="mt-1 text-sm text-foreground/70">观呼吸、观念头，练习清明。</div>
        </a>
        <a
          href="/tags/情绪词典"
          class="rounded-lg border border-border bg-(--bg-card) px-4 py-3 transition-colors hover:border-accent hover:bg-muted/30"
        >
          <div class="text-base font-semibold">情绪词典</div>
          <div class="mt-1 text-sm text-foreground/70">为情绪命名，也为心找路。</div>
        </a>
      </div>

      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">在别处：</div>
            <Socials />
          </div>
        )
      }
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">精选</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">近作</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        全部文章
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
